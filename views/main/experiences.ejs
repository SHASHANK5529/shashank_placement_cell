<section class="articles">
  <div class="search-container">
    <h1>Experiences</h1>
    <div class="search-wrapper">
      <input type="text" id="searchInput" placeholder="Search titles or event names..." class="rounded-lg h-10 px-4">
      <button id="searchButton">Search</button>
    </div>
  </div>

  <div class="max-w-screen-xl mx-auto px-4 sm:px-6 lg:px-8 hello">
    <ul class="ul">
      <% data.forEach(post => { %>
        <li>
          <a href="/exp/<%= post._id %>" class="feed">
            <span>
              <h3><%= post.Title %></h3>
              <h5><%= post.Event_name %></h5>
              <p><%= post.Roll_number %></p>
            </span>
            <span class="article-list"><%= post.createAt.toDateString() %></span>
          </a>
          <hr class="hr">
        </li>
      <% }) %>
    </ul>
  </div>

  <script>
    const searchInput = document.getElementById('searchInput');
    const searchButton = document.getElementById('searchButton');

    searchButton.addEventListener('click', function () {
      const searchText = searchInput.value.toLowerCase();
      const articles = document.querySelectorAll('.articles .ul li');

      articles.forEach(article => {
        const title = article.querySelector('h3').textContent.toLowerCase();
        const eventName = article.querySelector('p').textContent.toLowerCase();
        const roll = article.querySelector('h5').textContent.toLowerCase();

        if (title.includes(searchText) || eventName.includes(searchText) || roll.includes(searchText)) {
          article.style.display = 'block';
        } else {
          article.style.display = 'none';
        }
      });
    });
  </script>

  <style>
    .hello a {
      color: black;
      text-decoration: none;
    }

    .ul {
      padding: 0;
      list-style-type: none;
      width: 100%;
      max-width: 900px;
      margin: 0 auto;
    }

    .ul li {
      margin: 0;
      padding: 1rem 0;
    }

    .feed {
      display: flex;
      justify-content: space-between;
      flex-wrap: wrap;
      gap: 10px;
    }

    .article-list {
      padding-top: 10px;
      font-size: 14px;
      color: var(--grey);
      min-width: 100px;
      text-align: right;
    }

    .hr {
      margin: 0;
      border: none;
      height: 1px;
      background-color: #b5c0d0;
      width: 100%;
    }

    .articles {
      display: flex;
      flex-direction: column;
      padding: 1rem;
    }

    .search-container {
      display: flex;
      flex-wrap: wrap;
      align-items: center;
      justify-content: space-between;
      padding: 1rem;
      max-width: 100%;
    }

    .search-wrapper {
      display: flex;
      align-items: center;
      flex-wrap: wrap;
      gap: 10px;
    }

    #searchInput {
      padding: 0.5rem;
      border: 1px solid #ccc;
      border-radius: 5px;
    }

    #searchButton {
      padding: 0.5rem 1rem;
      background-color: #4caf50;
      color: white;
      border: none;
      border-radius: 4px;
      cursor: pointer;
    }

    #searchButton:hover {
      background-color: #45a049;
    }

    h1 {
      font-size: 2rem;
      margin-bottom: 1rem;
    }

    @media (max-width: 768px) {
      .feed {
        flex-direction: column;
        align-items: flex-start;
      }

      .article-list {
        text-align: left;
        padding-top: 0.5rem;
      }

      .search-container {
        flex-direction: column;
        align-items: flex-start;
        gap: 1rem;
      }

      h1 {
        font-size: 1.5rem;
      }
    }

    @media (max-width: 480px) {
      #searchInput {
        width: 100%;
      }

      .search-wrapper {
        width: 100%;
        flex-direction: column;
        align-items: stretch;
      }
    }
  </style>
</section>
