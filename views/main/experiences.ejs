<section class="articles">
<div class="search-container">
  <h1>Experiences</h1>
  <div class="search-wrapper">
      <input type="text" id="searchInput" placeholder="Search titles or event names..." class="rounded-lg border-gray-300 dark:border-gray-700 focus:ring-blue-500 focus:border-blue-500 h-10 px-4">
      <button id="searchButton">Search</button>
  </div>
  
</div>
      <div class="max-w-screen-xl mx-auto px-4 sm:px-6 lg:px-8 hello">
        <ul class="ul">
          <% data.forEach(post => { %>
            
            <li>
              <a href = "/exp/<%=post._id %>" class="feed">
                <span><h3><%= post.Title %></h3><h5><%= post.Event_name %></h5><p><%= post.Roll_number %></p></span>
                <span class="article-list"><%= post.createAt.toDateString() %></span>
              </a> 
              <hr class="hr">
  

          </li>
        
          <% }) %>
          
        </ul>
        </div>

      </div>
<script>
// Get the input element and search button
const searchInput = document.getElementById('searchInput');
const searchButton = document.getElementById('searchButton');

// Add click event listener to search button
searchButton.addEventListener('click', function() {
    const searchText = searchInput.value.toLowerCase(); // Convert input value to lowercase for case-insensitive search
    const articles = document.querySelectorAll('.articles .ul li');

    articles.forEach(article => {
        const title = article.querySelector('h3').textContent.toLowerCase(); // Get the title text and convert it to lowercase
        const eventName = article.querySelector('p').textContent.toLowerCase();
        const roll = article.querySelector('h5').textContent.toLowerCase(); // Get the event name text and convert it to lowercase
        // If either the title or event name contains the search text, display the article; otherwise, hide it
        if (title.includes(searchText) || eventName.includes(searchText) || roll.includes(searchText)) {
            article.style.display = 'block';
        } else {
            article.style.display = 'none';
        }
    });
});


</script>
