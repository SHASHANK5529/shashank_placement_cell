<style>
  * {
    box-sizing: border-box;
  }

  body {
    margin: 0;
    font-family: Arial, sans-serif;
  }

  header {
    background-color: aliceblue;
    padding: 1rem;
  }

  .header-wrapper {
    display: flex;
    flex-wrap: wrap;
    align-items: center;
    gap: 1rem;
  }

  .header-text h1 {
    color: lightblue;
    margin: 0;
    font-size: 1.5rem;
  }

  .header-text em {
    color: grey;
    font-size: 0.95rem;
  }

  .highlight {
    color: red;
  }

  nav.abc {
    background-color: #333;
    display: flex;
    flex-wrap: wrap;
    justify-content: center;
    gap: 10px;
    padding: 0.5rem 0;
  }

  nav.abc a,
  .dropbtn {
    color: white;
    text-decoration: none;
    padding: 12px 16px;
    text-align: center;
  }

  nav.abc a:hover,
  .dropdown:hover .dropbtn {
    background-color: #ddd;
    color: black;
  }

  .dropdown {
    position: relative;
  }

  .dropdown-content {
    display: none;
    position: absolute;
    top: 40px;
    background-color: #333;
    min-width: 200px;
    z-index: 1;
  }

  .dropdown-content a {
    padding: 12px 16px;
    display: block;
    text-align: center;
    color: white;
  }

  .dropdown-content a:hover {
    background-color: #ddd;
    color: black;
  }

  .dropdown:hover .dropdown-content {
    display: block;
  }

  /* RESPONSIVE STYLES */
  @media screen and (max-width: 768px) {
    .header-wrapper {
      flex-direction: column;
      text-align: center;
    }

    nav.abc {
      flex-direction: column;
      align-items: center;
    }

    .dropdown-content {
      position: static;
      width: 100%;
    }

    nav.abc a,
    .dropbtn {
      width: 100%;
      padding: 14px;
    }
  }

  @media screen and (max-width: 480px) {
    .header-text h1 {
      font-size: 1.2rem;
    }

    .header-text em {
      font-size: 0.85rem;
    }
  }
</style>
<script>
window.onclick = function(event) {
  if (!event.target.matches('.dropbtn')) {
    var dropdowns = document.getElementsByClassName("dropdown-content");
    var i;
    for (i = 0; i < dropdowns.length; i++) {
      var openDropdown = dropdowns[i];
      if (openDropdown.style.display === "block") {
        openDropdown.style.display = "none";
      }
    }
  }
}

</script>